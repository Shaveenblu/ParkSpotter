<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="368dp"
    android:layout_height="150dp"
    android:layout_marginTop="550dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="18dp">

    <RelativeLayout
        android:layout_width="369dp"
        android:layout_height="150dp"
        android:background="#303E61">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="22dp"
            android:text="Place"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/recArrival"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-70dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/recAvailable"
            android:maxLines="1"
            android:text="Charge"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="50dp"
            android:text="Arrival"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/recAvailable"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-149dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@id/recPlace"
            android:text="Available"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="80dp"
            android:text="Charge"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/recCharge"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-60dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/recAvailable"
            android:maxLines="1"
            android:text="Charge"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="105dp"
            android:text="Available"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/recPlace"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="105dp"
            android:layout_toEndOf="@id/recImage"
            android:text="place"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>