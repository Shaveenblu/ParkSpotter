locatetwoplaces
    <?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Locatetwoplaces">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="410dp"
        android:layout_height="355dp"
        android:layout_margin="10dp"
        android:layout_marginEnd="250dp"
        app:cardCornerRadius="19dp"
        app:cardElevation="25dp"
        app:cardMaxElevation="19dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39"
        app:cardBackgroundColor="#303E61">

        <EditText
            android:id="@+id/startLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter starting point"
            android:layout_gravity="center"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginBottom="72dp"/>

        <EditText
            android:id="@+id/endLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter ending point"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/searchDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="72dp"
            android:backgroundTint="@color/white"
            android:text="Search"
            android:textColor="#303E61"
            app:cornerRadius="16dp" />

    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search the distance between two locations"
        android:textColor="#314063"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigation"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_background"
        android:elevation="20dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="#242"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>